{
  "name": "Paperlib",
  "description": "Chrome Extension for Paperlib.",
  "version": "0.0.4",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://scholar.google.com/*"],
      "js": ["googlescholar.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "128.png"
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["activeTab", "scripting", "cookies"]
}
